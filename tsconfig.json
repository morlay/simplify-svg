{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "packages-src",
    "rootDir": "packages-src",
    "outDir": "packages",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "pretty": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./@types/"
    ],
    "sourceMap": false
  },
  "exclude": [
    "node_modules/*",
    "packages/*",
    "tools/*"
  ]
}