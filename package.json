{
  "name": "simplify-svg",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "@morlay/*"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  },
  "scripts": {
    "ncu": "lerna exec -- ncu -u",
    "clean": "rm -rf @querycap*/*/node_modules",
    "fmt": "prettier --write @querycap*/{,**/}{,**/}*.{ts,tsx,json,md}",
    "test": "jest --coverage",
    "build": "lerna exec monobundle",
    "prepare": "yarn test && yarn build"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@babel/core": "7.8.7",
    "@babel/preset-env": "7.8.7",
    "@querycap-dev/babel-preset": "*",
    "@querycap-dev/eslint-config": "*",
    "@querycap-dev/monobundle": "*",
    "@babel/runtime": "7.8.7",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@types/jest": "25.1.x",
    "@types/lodash": "4.14.x",
    "@types/node": "13.9.x",
    "babel-jest": "25.1.x",
    "eslint": "6.8.x",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "lerna": "3.20.2",
    "lint-staged": "10.0.8",
    "lodash": "4.17.15",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "post-merge": "yarn",
      "pre-commit": "lint-staged && pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --quiet"
    ]
  }
}
