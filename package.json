{
  "name": "simplify-svg",
  "private": true,
  "scripts": {
    "fmt": "prettier --write packages/**/src/**/**.{ts,json}",
    "ncu": "lerna exec -- ncu -u",
    "build": "lerna exec -- tsc",
    "test": "jest",
    "postinstall": "lerna bootstrap",
    "prepare": "npm test && npm run build"
  },
  "devDependencies": {
    "@types/fs-extra": "8.0.x",
    "@types/glob": "7.1.x",
    "@types/jest": "24.0.15",
    "@types/node": "12.0.x",
    "@types/webpack": "4.4.x",
    "fs-extra": "8.0.x",
    "glob": "7.1.x",
    "jest": "24.8.0",
    "lerna": "3.15.0",
    "memory-fs": "0.4.x",
    "npm-check-updates": "3.1.x",
    "prettier": "1.18.x",
    "raw-loader": "3.0.x",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.x",
    "typescript": "3.5.x",
    "webpack": "4.35.x"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "(.*)": "<rootDir>/packages/$1/src"
    },
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  }
}
