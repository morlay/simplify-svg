{
  "name": "simplify-svg",
  "version": "3.2.4",
  "scripts": {
    "fmt": "prettier --write packages/**/src/**/**.{ts,json}",
    "test": "jest",
    "build": "tsc",
    "prepare": "npm test && npm run build"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "license": "WTFPL",
  "dependencies": {
    "@types/cheerio": "0.22.x",
    "@types/lodash": "4.14.x",
    "cheerio": "1.0.0-rc.3",
    "lodash": "4.17.x",
    "node-murmurhash": "2.1.x",
    "postcss": "7.0.x",
    "svg-points": "6.0.x",
    "svgpath": "2.2.x"
  },
  "devDependencies": {
    "@types/fs-extra": "8.0.x",
    "@types/glob": "7.1.x",
    "@types/jest": "24.9.x",
    "@types/node": "12.0.x",
    "fs-extra": "8.1.x",
    "glob": "7.1.x",
    "jest": "24.8.x",
    "prettier": "1.18.x",
    "ts-jest": "24.0.x",
    "ts-node": "8.3.x",
    "typescript": "3.5.x"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  }
}
