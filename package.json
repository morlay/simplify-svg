{
  "private": true,
  "scripts": {
    "ncu": "lerna exec -- ncu -a",
    "lint": "lerna exec -- eslint src/ --fix",
    "build": "lerna exec -- babel src/ --ignore __*__ --out-dir lib/",
    "mocha": "lerna exec -- mocha -R dot --compilers .:babel-register src/__tests__/*.spec.js",
    "test": "npm run lint && npm run mocha"
  },
  "devDependencies": {
    "@morlay/babel-preset": "1.0.x",
    "@morlay/eslint-config": "1.0.x",
    "@morlay/tests": "1.0.x",
    "babel-plugin-transform-es2015-modules-commonjs": "6.11.x",
    "lerna": "2.0.0-beta.24",
    "npm-check-updates": "2.8.x"
  }
}
