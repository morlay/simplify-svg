    "outDir": "dist",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "pretty": true,
    "sourceMap": false
